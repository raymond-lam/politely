{
  "name": "politely",
  "version": "1.1.4",
  "main": "politely.js",
  "types": "politely.d.ts",
  "description": "Ensure that a server process gracefully shuts down.",
  "keywords": [
    "graceful",
    "shutdown",
    "exit",
    "process",
    "signal"
  ],
  "scripts": {
    "clean": "rimraf coverage",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "mocha test.js",
    "test:coverage": "nyc --reporter=lcov --reporter=text mocha test.js",
    "test:lint": "eslint --ignore-path=.gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raymond-lam/politely.git"
  },
  "author": {
    "name": "Raymond Lam",
    "email": "ray@lam-ray.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raymond-lam/politely/issues"
  },
  "homepage": "https://github.com/raymond-lam/politely#readme",
  "dependencies": {
    "promise-all-reject-later": "^1.0.12"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.14.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "check-coverage": true,
    "temp-dir": "./coverage/.nyc_output"
  }
}
